/* pages/mine/setting.wxss */

view {
  background: rgb(255,254,249);
	padding-bottom: 15px;
  border-radius: 15px;
  margin: 15px 15px;
  padding: 3%;
}

h1 {
  font-size: 20px;
  text-align: center;
  font-weight: bold;
}

p {
	font-size: 14px;
  text-align: center;
}
.head {
  width: 85%;
  height: 100%;
  background: rgb(226, 225, 228);
}
.avatar-wrapper {
  border-radius: 10px;
  background: rgb(226, 225, 228);
}
.avatar {
  width: 100px;
  height: 100px;
  border-radius: 100px;
}
.nick-name {
  margin-top: 10px;
  margin-left: 270rpx;
  width: 80px;
}
.black-cover {
  position: absolute;
  z-index: 2;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #888;
  opacity: 0.18;
}

.desc-time {
  font-size: 11pt;
  color: #888;
}

.desc-list {
  display: flex;
  flex-direction: column;
  border-left: 8rpx solid #ddd;
  padding-left: 15rpx;
  color: #777;
  margin-bottom: 15rpx;
  font-size: 10pt;
}

.desc-content {
  padding-bottom: 15rpx;
}

.avatar-border{
  border: 2px solid var(--wegreen);
}

.button-area {
  background: rgb(226, 225, 228);
}
.contact-us {
  position: relative;
  float: left;
  background: #96ce54;
  border-radius: 10px;
}
.share-us {
  position: relative;
  float: right;
  background: #96ce54;
  border-radius: 10px;
}